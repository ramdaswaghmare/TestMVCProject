@model HomeDetailsViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Employee Detail";
}
<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Employee.Name</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="~/images/genelia.jpg" style="height:200px;width:150px" />
                <h4>Employee ID : @Model.Employee.Id</h4>
                <h4>Name ID : @Model.Employee.Name</h4>
                <h4>Email ID : @Model.Employee.Email</h4>
                <h4>Department ID : @Model.Employee.Department</h4>
            </div>
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="index" class="btn btn-primary">Back</a>
                <a href="#" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>

        </div>

    </div>
</div>


@section Scripts{ 
    <script src="~/js/CustomScript.js"></script>
}
 

